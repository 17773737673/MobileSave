<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:example="http://schemas.android.com/apk/res/com.example.reviewmobile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e74c3c"
    android:orientation="vertical" >

    <com.sdf.jazzylistviewdemo.romainpiel.shimmer.ShimmerTextView
        example:reflectionColor="@color/black"
        style="@style/title"
        android:text="2.手机卡绑定" />

    <TextView
        style="@style/item"
        android:text="通过绑定Sim卡" />

    <TextView
        style="@style/item"
        android:text="下次重启手机发现Sim卡变化" />

    <TextView
        style="@style/item"
        android:text="就会发送报警短信" />

	<com.example.reviewmobile.view.SettingView 
	    android:id="@+id/sv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    example:title="点击绑定SIM卡"
	    example:desc_on="SIM卡已绑定"
	    example:desc_off="SIM卡未绑定"
	    />
    
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_online" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            style="@style/next"
             />
		<Button
            style="@style/previous"
             />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/setup2" />

    </RelativeLayout>

</LinearLayout>